@model TelegramSMM.ViewModels.LoginModel

@{
    ViewBag.Title = "Login";
}

<h2 class="logo">LOGIN</h2>
<hr class="dashed"/>
<div class="big-block">
<div class="in-big-block">

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

   
        @Html.ValidationSummary(true, "", new { @class = "validation-message  alert alert-primary" })
        <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
        <div class="form-group">
            <label>Email</label><br />
            <input type="email" name="Email" id="Email" class="form-control" required="required"  />

        </div>
        <div class="form-group">
            <label>Paasword</label><br />
            <input type="password" name="Password" id="Password" class="form-control" required="required" />

        </div>
        <div class="form-group">
            <input type="submit" value="Sing in" class="btn btn-primary"/>
        </div>

}
</div>
</div>